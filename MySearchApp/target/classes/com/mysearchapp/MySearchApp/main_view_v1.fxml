<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" stylesheets="style.css">

    <!-- Header (same as original main_view.fxml) -->
    <top>
        <Label text="Excel Search Application"
               styleClass="header-label"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <!-- Row 1: Select file + file label (same placement as original) -->
            <HBox spacing="10">
                <Button text="Select Excel File" onAction="#handleFileSelect"/>
                <Label fx:id="fileLabel" text="No file selected."/>
            </HBox>

            <!-- Row 2: Search field + Search + Reset (Reset placed right next to Search) -->
            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Enter search string"/>
                <Button text="Search" onAction="#handleSearch"/>
                <Button text="Reset" onAction="#handleReset"/>
            </HBox>

            <!-- Results Table (keeps same sizing/placement as original) -->
            <TableView fx:id="resultTable" prefHeight="200">
                <columns>
                    <!-- Placeholder columns (controller will clear/create dynamic columns as needed) -->
                    <TableColumn fx:id="dataColumn" text="Data" prefWidth="250"/>
                    <TableColumn fx:id="actionColumn" text="Action" prefWidth="250"/>
                </columns>
            </TableView>

            <!-- Status label at bottom of center VBox (shows result counts/status) -->
            <Label fx:id="statusLabel" text="Ready." style="-fx-text-fill: gray;"/>
        </VBox>
    </center>

</BorderPane>
